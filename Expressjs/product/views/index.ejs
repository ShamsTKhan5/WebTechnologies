<html>
    <head>
    </head>
    <body>
        <header>
            <h1>product management system</h1>
        </header>
        <form action="/displayaddform">
            <button type="submit" name="btn" id="btn" value="btn">Add new product</button>
            <table border="2">
                <thead>
                <tr>
                    <th>product ID</th>
                    <th>product Name</th>
                    <th>product Price</th>
                    <th>action</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i<productdata.length; i++) { %>
                    <tr>
                        <td><%= productdata[i].pid %></td>
                        <td><%= productdata[i].pname %></td>
                        <td><%= productdata[i].price %></td>
                        <td>
                            <a href="/edit/<%= productdata[i].pid %>">edit</a>/
                            <a href="/delete/<%= productdata[i].pid %>">delete</a>
                        </td>
                    </tr>
                <% } %>
            </tbody>
            </table>
        </form>
    </body>
</html>
